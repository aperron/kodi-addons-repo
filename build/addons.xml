<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="script.steamlink.launcher" name="Steam" version="3.4.0" provider-name="aperron">
    <requires>
        <import addon="xbmc.python" version="2.19.0"/>
    </requires>
    <extension point="xbmc.python.script" library="default.py">
        <provides>game executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Launches Steam in Big Picture mode from within Kodi.</summary>
        <description lang="en">Launches Steam in BPM from within Kodi - Includes various options for Kodi with the option to run programs pre/post Steam. It works with Windows, Linux, OSX and Android. Each OS has different settings available.</description>
        <platform>linux windx osx android</platform>
        <language>en</language>
        <license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
        <forum>http://forum.kodi.tv/showthread.php?tid=157499</forum>
        <website>http://forum.kodi.tv/showthread.php?tid=157499</website>
        <source>https://github.com/aperron/kodi-addon-steamlink-on-rasp</source>
        <email></email>
		<donate>RPB9WP39AVYFS</donate>
		<assets>
			<icon>icon.png</icon>
			<fanart>fanart.jpg</fanart>
			<screenshot>resources/screenshot-01.jpg</screenshot>
			<screenshot>resources/screenshot-02.jpg</screenshot>
			<screenshot>resources/screenshot-03.jpg</screenshot>
			<banner>resources/banner.jpg</banner>
			<logo>resources/logo.png</logo>
		</assets>
    </extension>
</addon>

<addon id="plugin.audio.soundcloud" name="SoundCloud" version="3.0.0" provider-name="jaylinski">
    <requires>
        <import addon="xbmc.python" version="2.25.0"/>
        <import addon="script.module.future" version="0.16.0"/>
        <import addon="script.module.requests" version="2.4.3"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>audio</provides>
    </extension>
    <extension point="xbmc.service" library="service.py" />
    <extension point="xbmc.addon.metadata">
        <summary lang="de_DE">Soundcloud ist eine Online-Audio-Vertriebsplattform.</summary>
		<summary lang="en_GB">SoundCloud is an online audio distribution platform.</summary>
        <language></language>
        <platform>all</platform>
        <license>MIT</license>
        <forum>https://forum.kodi.tv/showthread.php?tid=206635</forum>
        <website>https://soundcloud.com</website>
        <source>https://github.com/aperron/kodi-addon-soundcloud</source>
        <news>3.0.0 (2019-06-01)
[new] complete rewrite
[new] python 3.6 compatibility
[fix] use new SoundCloud API
        </news>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
</addons>
